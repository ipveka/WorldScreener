# WorldScreener Environment Configuration
# Rename this file to .env and fill in your API keys

# Financial API key (optional)
# If you have a premium API key for financial data, enter it here
FINANCIAL_API_KEY=your_api_key_here

# Cache configuration
# Duration in hours for data cache (default: 4)
CACHE_DURATION=4

# Output configuration
# Default format for reports (text, csv, json, html, excel)
DEFAULT_OUTPUT_FORMAT=text

# Logging configuration
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Whether to log to file (true, false)
LOG_TO_FILE=false
# Log file path
LOG_FILE=worldscreener.log

# Visualization configuration
# DPI for saved images
VISUALIZATION_DPI=300